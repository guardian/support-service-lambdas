{
  "name": "buildgen",
  "version": "1.0.0",
  "private": true,
  "description": "Build file generator for handlers",
  "scripts": {
    "buildgen": "pnpm snapshot:update",
    "snapshot:update": "bash scripts/generate-template-list.sh && REPO_ROOT=\"$(pwd | sed 's|/buildgen.*||')\" && ts-node src/cli.ts --generate \"$REPO_ROOT\"",
    "snapshot:clean": "bash scripts/generate-template-list.sh && REPO_ROOT=\"$(pwd | sed 's|/buildgen.*||')\" && ts-node src/cli.ts --clean \"$REPO_ROOT\"",
    "snapshot:assert": "bash scripts/generate-template-list.sh && REPO_ROOT=\"$(pwd | sed 's|/buildgen.*||')\" && bash -c 'jest --testNamePattern=\"checkActual $*\"' -- \"$@\"",
    "migrate-handler": "REPO_ROOT=\"$(pwd | sed 's|/buildgen.*||')\" && bash scripts/migrate-handler.sh \"$REPO_ROOT\"",
    "check": "bash scripts/generate-template-list.sh && tsc --noEmit",
    "clean": "rm -rf src/steps/generatedMappings.ts dist",
    "test": "bash scripts/generate-template-list.sh && jest"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
