{
	"name": "cdk",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "tsc",
		"type-check": "tsc --noEmit",
		"test": "sh -c 'jest ${1:+--testPathPattern=\"$1\"}' --",
		"test-update": "sh -c 'jest -u ${1:+--testPathPattern=\"$1\"}' --",
		"check-formatting": "prettier --check **.ts",
		"lint": "eslint --cache --cache-location /tmp/eslintcache/ lib/** bin/** --ext .ts --no-error-on-unmatched-pattern",
		"synth": "cdk synth --path-metadata false --version-reporting false",
		"diff": "cdk diff --path-metadata false --version-reporting false",
		"package": "sh -c 'pnpm type-check && pnpm lint && pnpm check-formatting && pnpm test $1 && pnpm synth' --",
		"fix-formatting": "prettier --write **.ts",
		"update-stack": "../update-stack.sh"
	},
	"devDependencies": {
		"@guardian/cdk": "61.11.1",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.14",
		"aws-cdk": "2.1014.0",
		"aws-cdk-lib": "2.195.0",
		"constructs": "10.4.2",
		"source-map-support": "^0.5.21",
		"ts-node": "^10.9.2"
	},
	"jest": {
		"testMatch": [
			"<rootDir>/lib/**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"setupFilesAfterEnv": [
			"./jest.setup.js"
		]
	}
}
