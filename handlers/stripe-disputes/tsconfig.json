{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"types": ["node", "jest"],
		"baseUrl": ".",
		"paths": {
			"@modules/*": ["../../modules/*/src"]
		}
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "dist", "target"]
}