{
	"name": "metric-push-api",
	"scripts": {
		"type-check": "tsc --noEmit",
		"build": "esbuild --bundle --platform=node --target=node18 --outfile=target/index.js src/index.ts",
		"lint": "eslint src/**/*.ts",
		"package": "pnpm type-check && pnpm lint && pnpm check-formatting && pnpm build && cd target && zip -qr metric-push-api.zip ./*.js",
		"check-formatting": "prettier --check **.ts",
		"fix-formatting": "prettier --write **.ts"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/aws-lambda": "^8.10.147"
	}
}
