{
  "name": "address-lookup",
  "scripts": {
    "test": "jest --group=-integration",
    "it-test": "jest --group=integration",
    "type-check": "tsc --noEmit",
    "build": "esbuild --bundle --platform=node --target=node18 --outfile=target/index.js src/index.ts",
    "lint": "eslint src/**/*.ts test/**/*.ts --no-error-on-unmatched-pattern",
    "package": "pnpm type-check && pnpm lint && pnpm check-formatting && pnpm test && pnpm build && cd target && zip -qr address-lookup.zip ./*.js",
    "check-formatting": "prettier --check **.ts",
    "fix-formatting": "prettier --write **.ts"
  },
  "dependencies": {
    "@aws-sdk/client-geo-places": "^3.921.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.129"
  }
}
